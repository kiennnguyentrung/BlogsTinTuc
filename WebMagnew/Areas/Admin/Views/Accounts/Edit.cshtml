@model WebMagnew.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Accounts" asp-action="Index">QUẢN LÝ TÀI KHOẢN</a></li>
        <li class="breadcrumb-item active" aria-current="page">TẠO TÀI KHOẢN</li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA TÀI KHOẢN </h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="Accounts" asp-action="Edit" asp-route-id="@Model.AccountId" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="Salt" />
            <input type="hidden" asp-for="FullName" />
            <input type="hidden" asp-for="Phone" />
            <input type="hidden" asp-for="Email" />
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="control-label">RoleID: <span class="tx-danger">*</span></label>
                        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Trạng thái:</label>
                        <br />
                        <input type="checkbox" asp-for="Active"><span>Active</span>
                    </div>
                </div><!-- col-3 -->


            </div><!-- row -->

            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0" value="Save">Cập nhật</button>
                <button class="btn btn-secondary bd-0">Hủy</button>
            </div><!-- form-layout-footer -->
        </form>
    </div><!-- form-layout -->
</div><!-- section-wrapper -->


