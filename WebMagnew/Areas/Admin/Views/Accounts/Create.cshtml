@model WebMagnew.Models.Account

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="slim-pageheader">
<ol class="breadcrumb slim-breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Accounts" asp-action="Index">QUẢN LÝ TÀI KHOẢN</a></li>
    <li class="breadcrumb-item active" aria-current="page">TẠO TÀI KHOẢN</li>
</ol>
<h6 class="slim-pagetitle">TẠO TÀI KHOẢN </h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Accounts" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Họ tên: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="FullName">
                    </div>
                </div><!-- col-4 -->

                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Số điện thoại: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Phone">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Email: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Email">
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Password: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Password">
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="CreateDate" class="control-label">Ngày tạo: <span class="tx-danger">*</span></label>
                        <input asp-for="CreateDate" class="form-control" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="control-label">RoleID: <span class="tx-danger">*</span></label>
                        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Trạng thái:</label>
                        <br />
                        <input type="checkbox" asp-for="Active"><span>Active</span>
                    </div>
                </div><!-- col-3 -->


            </div><!-- row -->

            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Submit Form</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->

