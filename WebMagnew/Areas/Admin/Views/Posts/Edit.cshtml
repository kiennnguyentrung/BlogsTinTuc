@model WebMagnew.Models.Post

@{
    ViewData["Title"] = "CHỈNH SỬA BÀI VIẾT";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link href="~/AdminAssets/lib/select2/css/select2.min.css" />
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">QUẢN LÝ BÀI VIẾT</a></li>
        <li class="breadcrumb-item active" aria-current="page">CHỈNH SỬA BÀI VIẾT</li>
    </ol>
    <h6 class="slim-pagetitle">CHỈNH SỬA BÀI VIẾT</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.PostId" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="CreateAt" />
            <input type="hidden" asp-for="Views" />
            <input type="hidden" asp-for="Author" />
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="Thumb" />
            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Tiêu đề: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Tilte">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Mô tả ngắn <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" maxlength="254" asp-for="Scontent">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Danh mục <span class="tx-danger">*</span></label>
                        <select class="form-control select2" asp-for="CatId" asp-items="@ViewBag.DanhMuc" required>
                            <option label="Danh mục"></option>

                        </select>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Thumb: <span class="tx-danger">*</span></label>
                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Tags: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Tag">
                    </div>
                </div><!-- col-12 -->

                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Meta key: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaKey">
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Meta desc: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="MetaDesc">
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Mô tả: <span class="tx-danger">*</span></label>
                        <textarea asp-for="Contents"></textarea>
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-4">
                    <div class="form-group mg-b-1-force">
                        <input type="checkbox" asp-for="Published"><span>Active</span>
                    </div>
                </div><!-- col-3 -->
                <div class="col-lg-4">
                    <div class="form-group mg-b-1-force">
                        <input type="checkbox" asp-for="IsHot"><span>Hot</span>
                    </div>
                </div><!-- col-3 -->
                <div class="col-lg-4">
                    <div class="form-group mg-b-1-force">
                        <input type="checkbox" asp-for="IsNewFeed"><span>IsNewfeed</span>
                    </div>
                </div><!-- col-3 -->
                <div class="form-layout-footer">
                    <button class="btn btn-primary bd-0">Submit Form</button>
                    <button class="btn btn-secondary bd-0">Cancel</button>
                </div><!-- form-layout-footer -->
            </div><!-- row -->
        </form>
    </div><!-- form-layout -->
</div><!-- section-wrapper -->
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssets/lib/select2/css/select2.min.css"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Contents').summernote({
                fontName: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

