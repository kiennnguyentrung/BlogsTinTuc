@model IEnumerable<WebMagnew.Models.Role>

@{
    ViewData["Title"] = "QUẢN LÝ QUYỀN TRUY CẬP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ QUYỀN TRUY CẬP</a></li>
    </ol>
    <h6 class="slim-pagetitle">QUẢN LÝ QUYỀN TRUY CẬP</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-primary">Thêm</a>
    <div class="table-responsive">
        <table class="table mg-b-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>RoleName</th>
                    <th>Desciption</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {

                        <tr>
                            <th scope="row">@item.RoleId</th>
                            <td>@item.RoleName</td>
                            <td>@item.RoleDescription</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Roles" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-success">Xem</a>
                                <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-primary">Sửa</a>
                                <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div><!-- table-responsive -->
</div><!-- section-wrapper -->