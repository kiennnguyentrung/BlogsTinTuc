@model List<Post>
@if (Model != null)
{
    <div class="widget rounded">
        <div class="widget-header text-center">
            <h3 class="widget-title"> Thịnh hành</h3>
            <img src="~/images/wave.svg" class="wave" alt="wave" />
        </div>

        <div class="widget-content">
            @*<div class="col-sm-6">*@
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    { 
                        if(item.IsHot == true && item.IsNewFeed == true)
                        {    
                        string url = $"/{item.Alias}.html";
                        <div class="post post-list-sm square before-seperator">
                            <div class="thumb rounded">
                                <a href="@url">
                                    <div class="inner">
                                        <img src="images/posts/@item.Thumb" alt="@item.Tilte" />
                                    </div>
                                </a>
                            </div>
                            <div class="details clearfix">
                                <h6 class="post-title my-0"><a href="@url">@item.Tilte</a></h6>
                                <ul class="meta list-inline mt-1 mb-0">
                                    <li class="list-inline-item">@item.CreateAt.Value.ToString("dd MMM yyyy")</li>
                                </ul>
                            </div>
                        </div>
                        }
                    }
                }
            </div>
            @*</div>*@
        </div>
}
