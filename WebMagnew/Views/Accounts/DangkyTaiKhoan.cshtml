@model WebMagnew.ModelView.RegisterViewModel

@{
    ViewData["Title"] = "DangkyTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main-content">
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 pt-10 pt-lg-0">
                    <form asp-action="DangkyTaiKhoan">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="section-wrapper">
                            <label class="section-title">Đăng ký tài khoản</label>
                            <div class="form-layout form-layout-4">
                                <div class="row">
                                    <label class="col-sm-4 form-control-label">Họ tên: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input type="text" asp-for="FullName" class="form-control" placeholder="Nhập họ tên...">
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div><!-- row -->
                                <div class="row mg-t-20">
                                    <label class="col-sm-4 form-control-label">Email: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input type="text" asp-for="Email" class="form-control" placeholder="Nhập Email...">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mg-t-20">
                                    <label class="col-sm-4 form-control-label">Số điện thoại: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input type="text" asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại...">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mg-t-20">
                                    <label class="col-sm-4 form-control-label">Mật khẩu: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input type="password" class="form-control" asp-for="Password" placeholder="Mật khẩu...">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mg-t-20">
                                    <label class="col-sm-4 form-control-label">Nhập lại mật khẩu: <span class="tx-danger">*</span></label>
                                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu...">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-layout-footer mg-t-30">
                                    <button class="btn btn-primary bd-0">Đăng ký</button>
                                    <button class="btn btn-secondary bd-0">Hủy</button>
                                </div><!-- form-layout-footer -->
                            </div><!-- form-layout -->
                        </div><!-- section-wrapper -->
                        </form>
                </div><!-- col-6 -->
                </div>
            </div>
        </div>
    </main>
